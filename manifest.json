{
  "manifest_version": 3,
  "name": "SoundCloud Default Sort",
  "version": "1.0.0",
  "description": "Automatically select your preferred sort option on SoundCloud track pages",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://soundcloud.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://soundcloud.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

